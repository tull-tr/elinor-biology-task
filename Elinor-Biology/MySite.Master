    <script>

        setInterval("myTimer()", 1000);

        function myTimer() {
            var d = new Date();

            var t1 = d.toLocaleDateString(); //תאריך
            var t2 = d.toLocaleTimeString(); //שעה
            var t = t1 + "<br/>" + t2;
            document.getElementById("myClock").innerHTML = t;

        }
    </script>

